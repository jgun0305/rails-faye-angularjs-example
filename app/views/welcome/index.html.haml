%div(ng-controller="Chat")
  {{ title }}
  %ul
    %li(ng-repeat="m in ms") <b>{{m.user}}</b>: {{ m.text }}
  %form(ng-submit="sendMessage()")
    %div
      I am
      %input(type="text" ng-model="user" placeholder="Username")
    %div
      %input(type="text" ng-model="message" placeholder="type message here & press enter" style="width: 500px;")
      %button Send
